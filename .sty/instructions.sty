	\tcbset{ 	%	defines tcolorbox aesthetics under 'base'
		base/.style={
			arc=0mm,
			bottomtitle=0.5mm,
			boxrule=0mm,
			colbacktitle=black!10!white, 
			coltitle=black, 
			fonttitle=\bfseries, 
			left=2.5mm,
			leftrule=1mm,
			right=3.5mm,
			title={#1}, 		%	'base styling takes one argument, which sets the title
			toptitle=0.75mm, 
		}
	}

  \definecolor{brandblue}{rgb}{0.34, 0.7, 1} 	%	defines the colour 'brandblue'
	
  \newtcolorbox{smartbox}[1]{ 	%	creates a new tcolorbox environment, called smartbox, which takes one argument
    colframe=brandblue, 	%	sets the left-frame color to brandblue
    base={#1}		%	sets the tcolorbox style to 'base'
  }
	
  \newcounter{step} 		%	defines a new counter, called 'step'

  \newenvironment{instrct}[1][]{ 	%	define a custom environment, called 'insrct', which takes one argument
    \smallskip
    \begin{smartbox}{\refstepcounter{step} Step~\thestep #1.} %		%	begins a 'smartbox', 'Step no.#' fulfills the 'title' of the 'base' style class
    }{\end{smartbox} 		%	end italics and end smartbox
    \smallskip
  }

%--------------------------------------------------
	\newtcolorbox{extbox}[1]{ 	%	creates a new tcolorbox environment, called extbox, which takes one argument
  		colframe=orange, 	%	sets the left-frame color to orange
  		base={#1}		%	sets the tcolorbox style to 'base'	
	}

	\newenvironment{ext}[1][]{ 	%	define a custom environment, called 'ext', which takes one argument
		\smallskip
		\begin{extbox}{Extension} %		%	begins a 'extbox', 'Step no.#' fulfills the 'title' of the 'base' style class
		}
		{\end{extbox} 		%	end italics and end smartbox
		\smallskip
		}

